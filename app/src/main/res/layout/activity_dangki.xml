<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dangki">
<TextView
    android:text="Đăng ký"
    android:textStyle="bold"
    android:textSize="40dp"
    android:layout_gravity="center"
    android:layout_marginTop="100dp"
    android:textColor="#03A9F4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <EditText
        android:drawableRight="@drawable/ic_tk"
        android:id="@+id/dktaikhoan"
        android:hint="Tài khoản"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:drawableRight="@drawable/ic_matkhau"
        android:id="@+id/dkmatkhau"
        android:hint="Mật khẩu"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:drawableRight="@drawable/ic_gmail"
        android:id="@+id/email"
        android:hint="Email"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/dkdangky"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:text="Đăng ký"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/trangchu"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Trang chủ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>